    mode_status = EMERGENCY_MODE;
    @sysvar::DRIVEMODE = EMERGENCY_MODE;
  }
  */
  Timer_10ms ++;
  TimeScheduling10ms(); 
  if (Timer_10ms % 2 == 0){
    TimeScheduling20ms();
  }
    if(Timer_10ms % 5 == 0){
      TimeScheduling50ms();
      if (Timer_10ms % 10 == 0){
        Timer_100ms++;
        TimeScheduling100ms();
        if (Timer_100ms % 2 == 0){
          TimeScheduling200ms();
        }
        if (Timer_100ms % 5 == 0){
          TimeScheduling500ms();
          if (Timer_100ms % 10 == 0){
            Timer_1000ms++;
            TimeScheduling1sec();
            if (Timer_1000ms % 5 == 0){
              TimeScheduling5sec();
              if (Timer_1000ms % 10 == 0) {
                TimeScheduling10sec();
              } 
            }
          }
        }
      }
    } 
}


