on start
{
  @sysvar::BODY::LEFTTURNON = 0;
  @sysvar::BODY::RIGHTTURNON = 0;
  @sysvar::BODY::TIREALERT = 0;
  @sysvar::DRIVEMODE = GENERAL_MODE;
  setTimerCyclic(loop, 10);
}


on timer loop
{
  /*
  alive_cnt++;
   if(alive_cnt >= 30 && mode_status != EMERGENCY_MODE) // cont'd
  {
